extends ../base.pug
            
block content
  h3 visualization
  
  script(type='text/javascript').
      google.charts.load('current', {'packages':['bar', 'table', 'corechart']});
      google.charts.setOnLoadCallback(drawChart);
      
       function drawChart(type) {
           data = new google.visualization.DataTable();
           data.addColumn('string', 'date');
           data.addColumn('number', 'pm10');
           data.addColumn('number', 'H');
           
           data.addRows([
                        [(#{books[0].time}).toString(), #{books[0].pm10}, #{books[0].H} ],
                        [(#{books[1].time}).toString(), #{books[1].pm10}, #{books[1].H} ],
                        [(#{books[2].time}).toString(), #{books[2].pm10}, #{books[2].H} ],
           ]);

           options = {
            'title': 'Air quality measurement',
            'width': 400,
            'height': 400
            };
            chart = new google.visualization.LineChart(document.getElementById('chart_div'));
            chart.draw(data, options);
       }
  #chart_div

  a(href="/books/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add configuration

  